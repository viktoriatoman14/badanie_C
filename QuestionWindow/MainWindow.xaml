<Window x:Class="ExperimentProject.QuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pytanie" Height="350" Width="500">
    <StackPanel Margin="30">
        <TextBlock x:Name="lblType" FontSize="10" Foreground="Gray"/>
        <TextBlock x:Name="lblText" FontSize="18" TextWrapping="Wrap" Margin="0,10,0,20"/>
        <Button x:Name="btnA" Click="AnswerClick" Tag="A" Margin="0,5" Height="50"/>
        <Button x:Name="btnB" Click="AnswerClick" Tag="B" Margin="0,5" Height="50"/>
        <TextBlock x:Name="lblStatus" Margin="0,20,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>